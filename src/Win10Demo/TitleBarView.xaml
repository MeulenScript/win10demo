<Page
    x:Class="Win10Demo.TitleBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win10Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel>
			<Button x:Name="BlueTitleBarButton" Content="Blue title" Click="BlueTitleBarButton_Click" />
			<Button x:Name="RedTitleBarButton" Content="Red title" Click="RedTitleBarButton_Click" />
			<Button x:Name="GreenTitleBarButton" Content="Green title" Click="GreenTitleBarButton_Click" />
            <Button x:Name="CustomTitleBarButton" Content="Custom title" Click="CustomTitleBarButton_Click" Visibility="Collapsed"/>
		</StackPanel>
    </Grid>
</Page>
